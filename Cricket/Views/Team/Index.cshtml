@model IEnumerable<Cricket.Models.Team>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cart</title>
    <!-- Add Bootstrap 5 CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<style>
    body {
		background-color: darkgray;
	}
</style>
<body>
    <div class="container my-5">
        <h1 class="text-center mb-4">All Teams</h1>

        <div class="row">
            @foreach (var team in Model)
            {
                    <div class="col-md-4">
                        <div class="card mb-4 shadow-sm">
                            <img src="@team.Logo" class="card-img-top" alt="@team.Name Logo" style="width: 100%; height: 200px; object-fit: cover;">
                            <div class="card-body">
                                <h5 class="card-title">@team.Name</h5>
                                <p class="card-text">
                                    <strong>Ranking:</strong> @team.Ranking <br />
                                    <strong>Region:</strong> @team.Region
                                </p>

                                <!-- Update and Delete buttons -->
                                <div class="d-flex justify-content-between">
                                    <!-- Update Button -->
                                    <a asp-action="Edit" asp-route-id="@team.Id" class="btn btn-warning btn-sm">Update</a>

                                    <!-- Delete Button -->
                                    <form asp-action="Delete" asp-route-id="@team.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this team?');">
                                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
            }
        </div>

        <!-- Add Button -->
        <div class="text-center">
            <a asp-action="Create" class="btn btn-success btn-lg">Add New Team</a>
        </div>
    </div>

    <!-- Add Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
