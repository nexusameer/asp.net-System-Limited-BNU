@model Cycling.Models.Cycle

<h2>Delete Cycle</h2>

<div>
    <h4>Are you sure you want to delete this cycle?</h4>
    <div>
        <strong>Name:</strong> @Model.Name <br />
        <strong>Company:</strong> @Model.Company <br />
        <strong>Gears:</strong> @Model.Gears <br />
        <strong>Logo:</strong>
        @if (!string.IsNullOrEmpty(Model.Logo))
        {
            <img src="@Url.Content("~/images/logos/" + Model.Logo)" alt="Logo" style="width: 100px;" />
        }
        else
        {
            <span>No Logo</span>
        }
    </div>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
