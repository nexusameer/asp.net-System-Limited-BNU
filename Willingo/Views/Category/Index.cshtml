@model IEnumerable<Willingo.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<!-- Add Category Button -->
<div class="text-center my-4">
    <a asp-action="Create" class="btn btn-success btn-lg">
        <i class="fas fa-plus-circle"></i> Add Category
    </a>
</div>

<!-- Categories List Start -->
<div class="container-fluid mb-3">
    <div class="row px-xl-5">
        @foreach (var category in Model)
        {
            <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                <div class="card shadow-sm">
                    <img class="card-img-top" src="@category.ImagePath" alt="@category.Title" style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">@category.Title</h5>
                        <p class="card-text">
                            <strong>Number of Products:</strong> @category.Products?.Count() ?? 0
                        </p>
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Edit", "Category", new { id = category.Id })" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <form asp-action="Delete" asp-route-id="@category.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this category?');">
                                <button type="submit" class="btn btn-danger btn-sm">
                                    <i class="fas fa-trash-alt"></i> Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<!-- Categories List End -->
