@model MartialArts.Models.Martial

@{
    ViewData["Title"] = "Delete Martial Art";
}

<h2>Delete Martial Art</h2>

<h3>Are you sure you want to delete this martial art?</h3>
<div>
    <p><strong>Name:</strong> @Model.Name</p>
    <p><strong>Description:</strong> @Model.Description</p>
    <p><strong>Origin:</strong> @Model.Origin</p>
    <p><strong>Popularity:</strong> @Model.Popularity</p>
</div>

<form asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
</form>
