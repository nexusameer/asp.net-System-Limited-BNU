@model IEnumerable<MartialArts.Models.Martial>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Martial Arts</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container my-5">
        <h1 class="text-center mb-4">Martial Arts</h1>

        @if (Model != null && Model.Any())
        {
            <div class="row">
                @foreach (var martial in Model)
                {
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <img src="@martial.ImagePath" class="card-img-top" alt="@martial.Name" style="width: 100%; height: 200px; object-fit: cover;">
                            <div class="card-body">
                                <h5 class="card-title">@martial.Name</h5>
                                <p class="card-text">
                                    <strong>Origin:</strong> @martial.Origin <br />
                                    <strong>Description:</strong> @martial.Description <br />
                                    <strong>Popularity:</strong> @martial.Popularity
                                </p>
                                <div>
                                    <a asp-action="Edit" asp-route-id="@martial.Id" class="btn btn-warning btn-sm">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@martial.Id" class="btn btn-danger btn-sm">Delete</a>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="alert alert-warning text-center" role="alert">
                No martial arts data available.
            </div>
            <div class="text-center">
                <a asp-action="Create" class="btn btn-primary">Add Martial Art</a>
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
