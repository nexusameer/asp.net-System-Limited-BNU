@model Willingo.Models.Category

@{
    ViewData["Title"] = "Edit Category";
}

<h2>Edit Category</h2>

<form asp-action="Edit" enctype="multipart/form-data" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Title" class="control-label">Category Title</label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImagePath" class="control-label">Category Image</label>
        <input type="file" name="ImageFile" class="form-control" />
        @if (Model.ImagePath != null)
        {
            <div class="mt-3">
                <img src="@Url.Content("~/" + Model.ImagePath)" alt="@Model.Title" style="max-height: 100px;" />
                <p class="text-muted">Current Image</p>
            </div>
        }
    </div>

    <div class="form-group">
        <input type="submit" value="Save Changes" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>
