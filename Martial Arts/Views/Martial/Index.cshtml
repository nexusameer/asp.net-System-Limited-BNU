@model IEnumerable<MartialArts.Models.Martial>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Martial Arts</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container my-5">
        <h1 class="text-center mb-4">Martial Arts</h1>

        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead class="table-dark text-center">
                        <tr>
                            <th>#</th>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Origin</th>
                            <th>Description</th>
                            <th>Popularity</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var martial in Model)
                        {
                            <tr>
                                <td class="text-center">@martial.Id</td>
                                <td class="text-center">
                                    <img src="@martial.ImagePath" alt="@martial.Name" style="width: 100px; height: 100px; object-fit: cover;">
                                </td>
                                <td>@martial.Name</td>
                                <td>@martial.Origin</td>
                                <td>@martial.Description</td>
                                <td>@martial.Popularity</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@martial.Id" class="btn btn-warning btn-sm">Edit</a>
                                    <form asp-action="Delete" asp-route-id="@martial.Id" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this martial art?');">
                                        <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-warning text-center" role="alert">
                No martial arts data available.
            </div>
            <div class="text-center">
                <a asp-action="Create" class="btn btn-primary">Add Martial Art</a>
            </div>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
